{
  "$id": "https://api.cerbos.dev/cerbos/policy/v1/RoleRule.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "resource",
    "allowedActions"
  ],
  "additionalProperties": false,
  "properties": {
    "allowedActions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "resource": {
      "type": "string",
      "minLength": 1
    }
  }
}
