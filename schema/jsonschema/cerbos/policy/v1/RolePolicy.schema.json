{
  "$id": "https://api.cerbos.dev/cerbos/policy/v1/RolePolicy.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "cerbos.policy.v1.RoleRule": {
      "type": "object",
      "required": [
        "resource",
        "permissibleActions"
      ],
      "additionalProperties": false,
      "properties": {
        "permissibleActions": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "resource": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "cerbos.policy.v1.ScopeFallThrough": {
      "type": "string",
      "enum": [
        "SCOPE_FALL_THROUGH_UNSPECIFIED",
        "SCOPE_FALL_THROUGH_ON_NO_MATCH",
        "SCOPE_FALL_THROUGH_ON_ALLOW"
      ]
    }
  },
  "allOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "role": {
          "type": "string",
          "minLength": 1
        },
        "rules": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/cerbos.policy.v1.RoleRule"
          }
        },
        "scope": {
          "type": "string",
          "pattern": "^([0-9A-Za-z][\\-0-9A-Z_a-z]*(\\.[\\-0-9A-Z_a-z]*)*)*$"
        },
        "scopeFallThrough": {
          "$ref": "#/definitions/cerbos.policy.v1.ScopeFallThrough"
        }
      }
    },
    {
      "type": "object",
      "required": [
        "role"
      ]
    }
  ]
}
