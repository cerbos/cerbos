{
  "$id": "https://api.cerbos.dev/cerbos/engine/v1/Principal.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "google.protobuf.Value": {
      "title": "Value",
      "description": "A dynamically-typed value."
    }
  },
  "type": "object",
  "required": [
    "id",
    "roles"
  ],
  "additionalProperties": false,
  "properties": {
    "attr": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/google.protobuf.Value"
      },
      "propertyNames": {
        "type": "string",
        "minLength": 1
      }
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "policyVersion": {
      "type": "string",
      "pattern": "^[0-9A-Z_a-z]*$"
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "scope": {
      "type": "string",
      "pattern": "^(^$|\\.|[0-9A-Za-z][\\-0-9A-Z_a-z]*(\\.[0-9A-Z_a-z][\\-0-9A-Z_a-z]*)*)$"
    }
  }
}
