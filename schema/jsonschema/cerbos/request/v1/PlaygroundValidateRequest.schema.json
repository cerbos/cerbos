{
  "$id": "https://api.cerbos.dev/cerbos/request/v1/PlaygroundValidateRequest.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "cerbos.request.v1.PolicyFile": {
      "type": "object",
      "required": [
        "fileName",
        "contents"
      ],
      "additionalProperties": false,
      "properties": {
        "contents": {
          "type": "string",
          "oneOf": [
            {
              "title": "Standard base64 encoding",
              "type": "string",
              "pattern": "^[\\r\\nA-Za-z0-9+/]*$"
            },
            {
              "title": "URL-safe base64 encoding",
              "type": "string",
              "pattern": "^[\\r\\nA-Za-z0-9_-]*$"
            }
          ]
        },
        "fileName": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  },
  "type": "object",
  "required": [
    "policyFiles"
  ],
  "additionalProperties": false,
  "properties": {
    "playgroundId": {
      "type": "string"
    },
    "policyFiles": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/cerbos.request.v1.PolicyFile"
      },
      "maxItems": 10,
      "minItems": 1
    }
  }
}
