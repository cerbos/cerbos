{
  "$id": "https://api.cerbos.dev/cerbos/request/v1/CheckResourceSetRequest.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "cerbos.engine.v1.Principal": {
      "type": "object",
      "required": [
        "id",
        "roles"
      ],
      "additionalProperties": false,
      "properties": {
        "attr": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/google.protobuf.Value"
          }
        },
        "id": {
          "type": "string",
          "minLength": 1
        },
        "policyVersion": {
          "type": "string",
          "pattern": "^[[:word:]]*$"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[[:word:]\\-\\.]+$"
          },
          "maxItems": 20,
          "minItems": 1,
          "uniqueItems": true
        },
        "scope": {
          "type": "string",
          "pattern": "^([[:alpha:]][[:word:]\\-]+(\\.[[:alpha:]][[:word:]\\-]*)*)*$"
        }
      }
    },
    "cerbos.request.v1.AttributesMap": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "attr": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/google.protobuf.Value"
          }
        }
      }
    },
    "cerbos.request.v1.AuxData": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "jwt": {
          "$ref": "#/definitions/cerbos.request.v1.AuxData.JWT"
        }
      }
    },
    "cerbos.request.v1.AuxData.JWT": {
      "type": "object",
      "required": [
        "token"
      ],
      "additionalProperties": false,
      "properties": {
        "keySetId": {
          "type": "string"
        },
        "token": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "cerbos.request.v1.ResourceSet": {
      "type": "object",
      "required": [
        "kind",
        "instances"
      ],
      "additionalProperties": false,
      "properties": {
        "instances": {
          "type": "object",
          "maxProperties": 20,
          "minProperties": 1,
          "additionalProperties": {
            "$ref": "#/definitions/cerbos.request.v1.AttributesMap"
          }
        },
        "kind": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[[:alpha:]][[:word:]\\@\\.\\-/]*(\\:[[:alpha:]][[:word:]\\@\\.\\-/]*)*$"
        },
        "policyVersion": {
          "type": "string",
          "pattern": "^[[:word:]]*$"
        },
        "scope": {
          "type": "string",
          "pattern": "^([[:alpha:]][[:word:]\\-]+(\\.[[:alpha:]][[:word:]\\-]*)*)*$"
        }
      }
    },
    "google.protobuf.Value": {
      "title": "Value",
      "description": "A dynamically-typed value."
    }
  },
  "type": "object",
  "required": [
    "actions",
    "principal",
    "resource"
  ],
  "additionalProperties": false,
  "properties": {
    "actions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "maxItems": 10,
      "minItems": 1,
      "uniqueItems": true
    },
    "auxData": {
      "$ref": "#/definitions/cerbos.request.v1.AuxData"
    },
    "includeMeta": {
      "type": "boolean"
    },
    "principal": {
      "$ref": "#/definitions/cerbos.engine.v1.Principal"
    },
    "requestId": {
      "type": "string"
    },
    "resource": {
      "$ref": "#/definitions/cerbos.request.v1.ResourceSet"
    }
  }
}
