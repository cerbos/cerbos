-- donald_duck.yaml --
---
apiVersion: "api.cerbos.dev/v1"
principalPolicy:
  principal: donald_duck
  version: "20210210"
  rules:
    - resource: leave_request
      actions:
        - action: "*"
          effect: EFFECT_ALLOW

-- donald_duck.acme.yaml --
---
apiVersion: "api.cerbos.dev/v1"
principalPolicy:
  principal: donald_duck
  version: "20210210"
  scope: "acme"
  rules:
    - resource: leave_request
      actions:
        - action: "*"
          condition:
            match:
              expr: "request.resource.attr.dev_record == true"
          effect: EFFECT_ALLOW

    - resource: salary_record
      actions:
        - action: "*"
          effect: EFFECT_DENY

