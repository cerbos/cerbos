-- resource_policies/leave_request_20210210.yaml --
---
apiVersion: api.cerbos.dev/v1
resourcePolicy:
  resource: leave_request
  version: "20210210"
  importDerivedRoles:
    - my_derived_roles
  schemas:
    principalSchema:
      ref: cerbos:///complex_object.json
    resourceSchema:
      ref: cerbos:///complex_object.json
  rules:
    - actions: ['*']
      effect: EFFECT_ALLOW
      roles:
        - admin
        - manager
        - '*'
      name: wildcard
