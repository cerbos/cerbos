-- leave_request.yaml --
---
apiVersion: api.cerbos.dev/v1
resourcePolicy:
  resource: leave_request
  version: "20210210"
  importDerivedRoles:
    - my_derived_roles
  schemas:
    principalSchema:
      ref: cerbos:///complex_object.json
    resourceSchema:
      ref: cerbos:///complex_object.json
  rules:
    - actions: ['*']
      effect: EFFECT_ALLOW
      roles:
        - admin
      name: wildcard

-- leave_request.acme.yaml --
---
apiVersion: api.cerbos.dev/v1
resourcePolicy:
  resource: leave_request
  version: "20210210"
  scope: "acme"
  importDerivedRoles:
    - my_derived_roles
  schemas:
    principalSchema:
      ref: cerbos:///complex_object.json
    resourceSchema:
      ref: cerbos:///complex_object.json
  rules:
    - actions: ["create"]
      derivedRoles:
        - employee_that_owns_the_record
      effect: EFFECT_ALLOW
    - actions: ["view:*"]
      derivedRoles:
        - employee_that_owns_the_record
        - direct_manager
      effect: EFFECT_ALLOW
    - actions: ["view:public"]
      derivedRoles:
        - any_employee
      effect: EFFECT_ALLOW
    - actions: ["approve"]
      condition:
        match:
          expr: request.resource.attr.status == "PENDING_APPROVAL"
      derivedRoles:
        - direct_manager
      effect: EFFECT_ALLOW

