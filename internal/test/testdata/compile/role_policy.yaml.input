-- role_policies/acme_admin.yaml --
---
apiVersion: api.cerbos.dev/v1
rolePolicy:
  role: acme_admin
  version: "default"
  scope: "acme"
  rules:
    - resource: leave_request
      allowActions: ['*']
    - resource: expenses_report
      allowActions:
        - view
        - create
        - delete
