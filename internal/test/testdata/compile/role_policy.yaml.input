-- role_policies/acme_admin.yaml --
---
apiVersion: api.cerbos.dev/v1
rolePolicy:
  role: leave_request
  scope: "acme"
  scopePermissions: SCOPE_PERMISSIONS_REQUIRE_PARENTAL_CONSENT_FOR_ALLOWS
  rules:
    - resource: acme_admin
      permissibleActions: ['*']
    - resource: expenses_report
      permissibleActions:
        - view
        - create
        - delete
