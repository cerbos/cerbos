-- role_policies/acme_admin.yaml --
---
apiVersion: api.cerbos.dev/v1
rolePolicy:
  role: leave_request
  version: "default"
  scope: "acme"
  rules:
    - resource: acme_admin
      allowActions: ['*']
    - resource: expenses_report
      allowActions:
        - view
        - create
        - delete
